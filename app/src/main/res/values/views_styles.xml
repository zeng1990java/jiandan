<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="ItemNickname">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ItemTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="ItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="ItemNewsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ItemNicknameGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
</resources>