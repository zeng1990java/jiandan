<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemCardView"
    android:minHeight="120dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|left"
        android:padding="@dimen/item_padding"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/nickname"
                style="@style/ItemNickname"
                tools:text="王大锤"
                />

            <com.github.zeng1990java.jiandan.view.TimelineTimeView
                android:id="@+id/time"
                style="@style/ItemTime"
                tools:text="1 小时前"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/joke_content"
            style="@style/ItemContent"
            tools:text="南方的朋友们！我有个提议！既然你们今年冬天那么热，不如就取消寒假吧"
            />

    </LinearLayout>



</android.support.v7.widget.CardView>